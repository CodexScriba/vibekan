{
  "name": "vibekan",
  "displayName": "Vibekan",
  "description": "Vibekan VSCode extension with glassâ€‘morphic Kanban UI",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "test": "npm run compile && vitest run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "dev": "vite",
    "build": "vite build",
    "compile": "tsc -p .",
    "watch": "concurrently \"npm run dev\" \"npm run watch:extension\"",
    "watch:extension": "tsc -watch -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodexScriba/vibekan.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/CodexScriba/vibekan/issues"
  },
  "homepage": "https://github.com/CodexScriba/vibekan#readme",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vibekan.openBoard",
        "title": "Open Vibekan Board"
      },
      {
        "command": "vibekan.copyTaskFullContext",
        "title": "Vibekan: Copy Task (Full Context)"
      },
      {
        "command": "vibekan.copyTaskOnly",
        "title": "Vibekan: Copy Task Only"
      },
      {
        "command": "vibekan.copyContextOnly",
        "title": "Vibekan: Copy Context Only"
      }
    ],
    "keybindings": [
      {
        "command": "vibekan.openBoard",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "!editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibekan",
          "title": "Vibekan",
          "icon": "media/sidebar.svg"
        }
      ]
    },
    "views": {
      "vibekan": [
        {
          "id": "vibekanView",
          "name": "Vibekan Board",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Vibekan",
      "properties": {
        "vibekan.copyMode.default": {
          "type": "string",
          "enum": [
            "full",
            "task",
            "context"
          ],
          "default": "full",
          "description": "Default copy mode for task prompts."
        },
        "vibekan.copyMode.includeTimestamps": {
          "type": "boolean",
          "default": true,
          "description": "Include created/updated timestamps in metadata."
        },
        "vibekan.copyMode.includeArchitecture": {
          "type": "boolean",
          "default": true,
          "description": "Include architecture.md content when building prompts."
        },
        "vibekan.copyMode.xmlFormatting": {
          "type": "string",
          "enum": [
            "pretty",
            "compact"
          ],
          "default": "pretty",
          "description": "XML formatting style for generated prompts."
        },
        "vibekan.copyMode.showToast": {
          "type": "boolean",
          "default": true,
          "description": "Show in-webview toast after copying."
        },
        "vibekan.copyMode.toastDuration": {
          "type": "number",
          "default": 3000,
          "description": "Toast duration in milliseconds."
        },
        "vibekan.theme": {
          "type": "string",
          "enum": [
            "dark-glass",
            "low-glow"
          ],
          "default": "dark-glass",
          "description": "Visual theme for Vibekan surfaces."
        },
        "vibekan.reducedMotion": {
          "type": "boolean",
          "default": false,
          "description": "Reduce motion/animation in Vibekan UI (respects system setting by default)."
        }
      }
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@monaco-editor/react": "^4.7.0",
    "lucide-react": "^0.554.0",
    "monaco-editor": "^0.55.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "jsdom": "^27.2.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}
